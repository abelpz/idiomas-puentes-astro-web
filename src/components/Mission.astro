---
import { Icon } from 'astro-icon/components';

const missionItems = [
  {
    icon: "mdi:book-open-page-variant",
    title: "Traducción de la Biblia",
    description: "Equipamos y ayudamos a la Iglesia mundial a traducir la Biblia a sus propios idiomas, proporcionando apoyo y herramientas gratuitas y de código abierto."
  },
  {
    icon: "mdi:link-variant",
    title: "Idiomas Puentes",
    description: "Utilizamos el español y el portugués como idiomas puentes para facilitar la traducción de la Biblia y el intercambio de recursos en América Latina y África."
  },
  {
    icon: "mdi:heart",
    title: "Capacitación de las iglesias",
    description: "Capacitamos a las iglesias tribales para que emprendan proyectos de traducción de la Biblia, fomentando el crecimiento espiritual y la madurez de sus comunidades."
  }
];
---

<section id="mission" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8">Nuestra Misión</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {missionItems.map(item => (
        <div class="flex flex-col items-center text-center">
          <Icon name={item.icon} class="w-16 h-16 text-blue-500 mb-4" />
          <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
          <p>{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
