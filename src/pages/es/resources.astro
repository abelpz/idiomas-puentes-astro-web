---
import Layout from '../../layouts/Layout.astro';
import ResourceCard from '../../components/ResourceCard.astro';

const resources = [
  {
    title: "Texto Puente Literal",
    description: "Una traducción literal de la Biblia, diseñada como herramienta para la traducción. Acerca a los traductores a la estructura y expresiones literales utilizadas en los idiomas originales (griego, hebreo, arameo).",
    link: "#",
    image: "/images/literal-bridge-text.jpg"
  },
  {
    title: "Texto Puente Simple",
    description: "Una traducción simplificada de la Biblia, diseñada como herramienta para la traducción. Ayuda a los traductores a comprender el significado detrás de las expresiones literales, figuras retóricas, modismos y palabras difíciles.",
    link: "#",
    image: "/images/simple-bridge-text.jpg"
  },
  {
    title: "Notas de Traducción",
    description: "Un conjunto de notas escritas por misioneros y consultores para ayudar al traductor a lo largo del proceso de traducción, versículo por versículo.",
    link: "#",
    image: "/images/translation-notes.jpg"
  },
  {
    title: "Academia de Traducción",
    description: "Un manual que contiene todos los conceptos de traducción necesarios para una traducción fiel desde el idioma puente al idioma tribal.",
    link: "#",
    image: "/images/translation-academy.jpg"
  },
  {
    title: "Palabras de Traducción",
    description: "Un diccionario de términos clave específicos a los que el traductor debe prestar especial atención. Ofrece definiciones y guía al traductor para encontrar la traducción apropiada en contexto.",
    link: "#",
    image: "/images/translation-words.jpg"
  },
  {
    title: "Preguntas de Traducción",
    description: "Una herramienta que contiene preguntas para verificar la naturalidad y precisión del texto. Útil para medir la comprensión de la Iglesia tribal de la traducción final.",
    link: "#",
    image: "/images/translation-questions.jpg"
  }
];

const title = "Recursos de Traducción | IdiomasPuentes";
---

<Layout title={title}>
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">Recursos de Traducción</h1>
    <p class="text-xl mb-8">Explora nuestro conjunto completo de herramientas y recursos diseñados para apoyar a la Iglesia tribal en la traducción de la Biblia:</p>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {resources.map(resource => (
        <ResourceCard
          title={resource.title}
          description={resource.description}
          link={resource.link}
          image={resource.image}
        />
      ))}
    </div>
  </div>
</Layout>
